@model GCook.Models.Categoria

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Foto" alt="@Model.Nome" class="img-fluid">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExibirHome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExibirHome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success texty-white">Editar</a> |
    <a asp-action="Index" class="btn btn-primary texty-white">Voltar</a>
</div>
